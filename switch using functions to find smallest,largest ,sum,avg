#include<stdio.h>
#include<stdlib.h>
int smallest(int[],int);
int largest(int[],int);
int sum(int[],int);
float avg(int[],int);
void main()
{
int a[50],i,n,ch;
printf("enter number of elements\n");
scanf("%d",&n);
printf("enter the array elements\n");
for(i=0;i<n;i++)
scanf("%d",&a[i]);
while(1)
{
printf("1:smallest \n2:largest\n3:sum\n4:average\n5:exit\n");
printf("enter the choice:");
scanf("%d",&ch);

switch(ch)
{
case 1:printf("smallest number=%d\n",smallest(a,n));
break;
case 2:printf("largest number=%d\n",largest(a,n));
break;
case 3:printf("sum=%d\n",sum(a,n));
break;
case 4:printf("average=%f\n",avg(a,n));
break;
case 5:exit(0);
default:printf("invalid\n");
break;
}
}
}

int smallest(int a[],int n)
{
int i,min=a[0];
for(i=1;i<n;i++)
{
if(a[i]<min)
min=a[i];
}
return min;
}

int largest(int a[],int n)
{
int i,max=a[0];
for(i=1;i<n;i++)
{
if(a[i]>max)
max=a[i];
}
return max;
}
    
int sum(int a[],int n)
{
int i,sum=0;
for(i=0;i<n;i++)
sum=sum+a[i];
return sum;
}

float avg(int a[],int n)
{
float avg;
avg=(float)sum(a,n)/n;
return avg;
}




    
